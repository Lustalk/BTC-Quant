# BTC Trading Strategy - Environment Variables
# Copy this file to .env and modify as needed

# Data Configuration
BTC_SYMBOL=BTC-USD
BTC_START_DATE=2017-01-01
BTC_END_DATE=2024-12-31
BTC_DATA_SOURCE=yfinance
BTC_TARGET_HORIZON=5
BTC_THRESHOLD=0.52

# XGBoost Model Parameters
XGB_N_ESTIMATORS=200
XGB_MAX_DEPTH=6
XGB_LEARNING_RATE=0.1
XGB_SUBSAMPLE=0.8
XGB_COLSAMPLE_BYTREE=0.8
XGB_REG_ALPHA=0.1
XGB_REG_LAMBDA=1.0
XGB_RANDOM_STATE=42
XGB_EARLY_STOPPING=50

# Validation Parameters
VAL_INITIAL_TRAIN_YEARS=2
VAL_TEST_PERIOD_MONTHS=3
VAL_MIN_TRAIN_SIZE=500
VAL_EXPANDING_WINDOW=true

# Performance Evaluation
RISK_FREE_RATE=0.02
BENCHMARK=buy_hold

# Risk Management
VOLATILITY_TARGET=0.15
MAX_POSITION_SIZE=1.0
ENABLE_TRANSACTION_COSTS=false
COMMISSION_RATE=0.001
SLIPPAGE_RATE=0.0005

# Analysis Configuration
ANALYSIS_MODE=core

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/btc_trading.log

# Development
DEBUG=false
VERBOSE=false 